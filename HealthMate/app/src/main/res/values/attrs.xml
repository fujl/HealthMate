<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="SimpleImageView">
        <attr name="src" format="reference"/>
        <attr name="scaleType">
            <enum name="fitXy" value="0"/>
            <enum name="centerCrop" value="1"/>
            <enum name="centerInside" value="2"/>
        </attr>
    </declare-styleable>
    <declare-styleable name="AsyncImageView">
        <attr name="isMemoryCacheEnable" format="boolean"/>
        <attr name="isDiskCacheEnable" format="boolean"/>
        <attr name="loadingDrawable" format="reference"/>
        <attr name="loadFailedDrawable" format="reference"/>
        <attr name="cornerRadius" format="integer"/>
        <attr name="imageShape" format="enum">
            <enum name="circle" value="0"/>
            <enum name="round" value="1"/>
            <enum name="normal" value="2"/>
        </attr>
    </declare-styleable>
    <declare-styleable name="TopBar">
        <attr name="titleText" format="string"/>
        <attr name="leftText" format="string"/>
        <attr name="rightText" format="string"/>
        <attr name="leftOnClick" format="string"/>
        <attr name="rightOnClick" format="string"/>
        <attr name="titleOnClick" format="string"/>
        <attr name="leftIcon" format="reference"/>
        <attr name="rightIcon" format="reference"/>
        <attr name="function">
            <flag name="NONE" value="0"/>
            <flag name="LEFT_TITLE" value="2"/>
            <flag name="LEFT_BTN" value="4"/>
            <flag name="TITLE" value="8"/>
            <flag name="RIGHT_TITLE" value="16"/>
            <flag name="RIGHT_BTN" value="32"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="TabItemView">
        <attr name="itemImage" format="reference"/>
        <attr name="itemImageSelected" format="reference"/>

        <attr name="itemText" format="string"/>
        <attr name="itemTextColor" format="color"/>
        <attr name="itemTextColorSelected" format="color"/>

        <attr name="isItemSelected" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="ItemView">
        <attr name="icon" format="reference"/>
        <attr name="title" format="string"/>
        <attr name="content" format="string"/>
        <attr name="contentcolor" format="color"/>
        <attr name="arrowvisiable" format="boolean"/>
        <attr name="cutlinevisiable" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="ExtendedListView">
        <attr name="scrollBarPanel" format="reference"/>
        <attr name="scrollBarPanelInAnimation" format="reference"/>
        <attr name="scrollBarPanelOutAnimation" format="reference"/>
    </declare-styleable>
    <declare-styleable name="ProportionLayout">
        <attr name="scaleSize" format="float"/>
        <attr name="isAdaptive" format="boolean"/>
        <attr name="pplayoutorientation">
            <enum name="HORIZONTAL" value="0"/>
            <enum name="VERTICAL" value="1"/>
        </attr>
    </declare-styleable>
    <!-- 通用数据填充控件属性 -->
    <declare-styleable name="CommonItemView">
        <attr name="commonItemTitle" format="string"/>
        <attr name="commonItemTitleColor" format="color"/>
        <attr name="commonItemTitleTextSize" format="dimension"/>
        <attr name="commonItemContent" format="string"/>
        <attr name="commonItemContentColor" format="color"/>
        <attr name="commonItemContentTextSize" format="dimension"/>
        <attr name="commonItemContentLeftIcon" format="reference"/>
        <attr name="commonItemContentRightIcon" format="reference"/>
        <attr name="commonItemContentHint" format="string"/>
        <attr name="commonItemInputMaxLength" format="integer"/>
        <attr name="commonItemLineState" format="enum">
            <enum name="onlyBottom" value="1"/>
            <enum name="onlyTop" value="2"/>
            <enum name="bothAnd" value="3"/>
            <enum name="neitherNor" value="4"/>
        </attr>
        <attr name="commonItemType" format="enum">
            <enum name="show" value="1"/>
            <enum name="input" value="2"/>
        </attr>
        <attr name="commonItemSimpleImeOption" format="enum">
            <enum name="actionDone" value="1"/>
            <enum name="actionGo" value="2"/>
            <enum name="actionNext" value="3"/>
            <enum name="actionNone" value="4"/>
            <enum name="actionPrevious" value="5"/>
            <enum name="actionSearch" value="6"/>
            <enum name="actionSend" value="7"/>
            <enum name="actionUnspecified" value="8"/>
        </attr>
        <attr name="commonItemSimpleInputType" format="enum">
            <enum name="typeNull" value="1"/>
            <enum name="typeText" value="2"/>
            <enum name="typeNumber" value="3"/>
            <enum name="typePassword" value="4"/>
            <enum name="typePasswordVisible" value="5"/>
            <enum name="typeDate" value="6"/>
            <enum name="typeTextMultiLine" value="7"/>
            <enum name="typeNumberDecimal" value="8"/>
        </attr>
    </declare-styleable>
</resources>
