<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/all_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/common_info_item_content_ll"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/common_info_item_title_ll"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/common_info_item_left_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:visibility="gone"
                android:layout_gravity="center_vertical"/>

            <TextView
                android:id="@+id/common_info_item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="12dp"
                android:maxWidth="250dp"
                android:textSize="16sp"
                android:textColor="@color/textTitle" />

        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/common_info_item_title_ll">

            <TextView
                android:id="@+id/common_info_item_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="12dp"
                android:paddingLeft="12dp"
                android:drawablePadding="3dp"
                android:gravity="center|right"
                android:textSize="16sp"
                android:textColorHint="#c4c7cc"
                android:textColor="@color/textNormal"/>

            <EditText
                android:id="@+id/common_info_item_input_content"
                android:textSize="16sp"
                android:textColor="@color/textTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingRight="12dp"
                android:layout_centerVertical="true"
                android:singleLine="false"
                android:textColorHint="#c4c7cc"
                android:scrollHorizontally="false"
                android:inputType="textMultiLine"
                android:gravity="center|left"
                android:maxLength="50"
                android:background="@null"/>

            <TextView
                android:id="@+id/common_info_item_input_hint_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:paddingRight="12dp"
                android:textColorHint="#c4c7cc"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:gravity="center|end"/>

        </RelativeLayout>
    </RelativeLayout>
    <View
        android:id="@+id/common_info_item_bottom_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_line_height"
        android:layout_below="@id/common_info_item_content_ll"
        android:layout_marginLeft="12dp"
        android:background="@color/commonLineColor"/>
    <View
        android:id="@+id/common_info_item_top_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_line_height"
        android:background="@color/commonLineColor"/>
</RelativeLayout>